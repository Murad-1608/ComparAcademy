@using EntityLayer.Entities
@model List<Share>

@section panelName
    {
    Paylaşılan postlar
}




    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Paylaşılan postlar</h3>
            <div class="inner-sec">
                <!--left-->
                <div class="left-blog-info-w3layouts-agileits text-left">
                    <div class="row">

                        @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <img src="~/Photos/@item.Post.Image" class="card-img-top img-fluid" alt="">

                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                </ul>

                                <ul class="blog-icons my-4">
                                    <li>
                                        Paylaşdı: @item.Sender.Email
                                    </li>
                                </ul>

                                <h5 class="card-title">
                                    <a href="single.html">@item.Post.Title</a>

                                </h5>
                                <a class="btn btn-primary read-m" href="~/SharedPost/DownloadFile/?filePath=@item.Post.Image">
                                    Yüklə
                                    <i class="fa fa-download"></i>
                                </a>
                                <a asp-controller="SharedPost" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-primary read-m">Sil</a>
                            </div>
                        </div>
                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>